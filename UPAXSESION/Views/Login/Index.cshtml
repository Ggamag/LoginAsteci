
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
    <link href="~/css/LoginPage.css" rel="stylesheet" />
</head>
<body>
    <div class="container-loginPage" style="background-image: url('/Images/torre-gs.jpg');">
        <div class="row">
            <div class="panel panel-default" id="PanelLogin" style="width:500px;">
                <div class="panel-body">
                    <div class="col-md-12">
                        <h3>Bienvenido</h3>
                        <div>
                            <label>Usuario</label>
                            <input type="text" id="TxtLogin" class="form-control" />
                            <label>Contraseña</label>
                            <input type="password" id="TxtPass" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <br />
                            <label id="LblErrorLogin" class="text-danger"></label>
                        </div>
                        <div class="col-md-4">
                            <br />
                            <input type="button" class="btn btn-primary btn-block" value="Ingresar" id="BtnIngresar" />
                        </div>
                        <div class="col-md-6">
                            <br />
                            <input type="button" id="BtnRegister" class="btn btn-default btn-block" value="Registrar usuario" />
                        </div>
                        <div class="col-md-6">
                            <br />
                            <input type="button" id="BtnRecovery" class="btn btn-default btn-block" value="Recuperar contraseña" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default" id="PanelRegister" style="width:600px; display:none;">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-10"><h3>Registrar nuevo usuario</h3></div>
                        <div class="col-md-2"><button style="margin-top:10px;" class="btn btn-default BtnLogin" type="button"><i class="glyphicon glyphicon-user"></i>Login</button></div>
                        <div class="col-md-6">
                            <label for="ValName">Nombre</label>
                            <input type="text" id="ValName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label>Apellido</label>
                            <input type="text" id="ValLastN" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label>Correo</label>
                            <input type="email" id="ValMail" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label>Telefono</label>
                            <input type="tel" id="Valphone" class="form-control" />
                        </div>
                        <div class="col-md-12">
                            <label>Usuario</label>
                            <input type="text" id="ValUser" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label>Contraseña</label>
                            <input type="password" id="Valpass" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label>Valida Contraseña</label>
                            <input type="password" id="Valpass2" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <br />
                            <label id="LblErrorRegister" class="text-danger"></label>
                        </div>
                        <div class="col-md-6">
                            <br />
                            <input type="button" id="BtnRegistra" class="btn btn-primary btn-block" value="Registrar usuario" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default" id="PanelRecovery" style="width:500px; display:none;">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-10"><h3>Recuperar contraseña</h3></div>
                        <div class="col-md-2"><button style="margin-top:10px;" class="btn btn-default BtnLogin" type="button"><i class="glyphicon glyphicon-user"></i>Login</button></div>
                        <div class="col-md-12">
                            <label>Usuario</label>
                            <input type="text" id="ReqLogin" class="form-control" />
                            <label>Correo</label>
                            <input type="email" id="ReqMail" class="form-control" />
                        </div>
                        <div class="col-md-8">
                            <label id="LblErrorRecupera"></label>
                        </div>
                        <div class="col-md-4">
                            <br />
                            <input type="button" id="BtnRecupera" class="btn btn-primary btn-block" value="Recuperar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <script src="~/JSPage/LoginJS.js"></script>
</body>
</html>
